# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./app.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Pipedrive Configuration
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token_here
PIPEDRIVE_COMPANY_DOMAIN=your_company_domain
PIPEDRIVE_WEBHOOK_SECRET=your_webhook_secret_here

# AI Service Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
SECRET_KEY=your_super_secret_key_change_this_in_production_$(openssl rand -hex 32)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1
PROJECT_NAME="AI CRM Multi-Agent System"

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
PIPEDRIVE_RATE_LIMIT_PER_10_SECONDS=90

# Agent Configuration
AGENT_TASK_TIMEOUT=300
AGENT_MAX_RETRIES=3
AGENT_HEALTH_CHECK_INTERVAL=30

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FORMAT=json
ENABLE_METRICS=true

# MCP Tools Configuration (add your MCP server configs here)
# Example MCP server configurations:
# MCP_SERVER_DATABASE_URL=your_mcp_database_server_url
# MCP_SERVER_GITHUB_TOKEN=your_github_token_for_mcp
# MCP_SERVER_CUSTOM_API_KEY=your_custom_mcp_api_key